<!-- ./views/edit.handlebars -->
<h1 class="mb-1 restaurant-show-title">修改支出項目</h1>
<div class="container mb-5">
  <div class="row">
    <div class="mx-auto">
      <div class="card" style="width: 30rem">
        <div class="card-body">
          <form action="/records/{{{records.id}}}/edit?_method=PUT" method="POST" style="display: inline;">
            <div class="mt-3 mb-5">
              <div class="form-group">
                <label for="name">支出項目：</label>
                <input type="text" class="form-control" placeholder="name" name="name" value="{{{records.name}}}">
              </div>
              <div class="form-group">
                <label for="category">分類：</label>
                <select name="category" class="btn-info btn-block">
                  <optgroup selected="true" label="目前分類："></optgroup>
                  <option value="{{{records.category}}}">{{{records.category}}}</option>
                  <div class="dropdown-divider"></div>
                  <optgroup label="請選擇新分類：">
                    <option value="家居物業">家居物業</option>
                    <option value="交通出行">交通出行</option>
                    <option value="休閒娛樂">休閒娛樂</option>
                    <option value="餐飲食品">餐飲食品</option>
                    <option value="其他">其他</option>
                </select>
              </div>
              <div class="form-group">
                <label for="google_map">金額：</label>
                <input type="text" class="form-control" placeholder="amount" name="amount" value="{{{records.amount}}}">
              </div>
              <button type="submit" class="btn btn-success mr-3">送出編輯內容</button>
          </form>
          <a href="/" class="btn btn-secondary">取消編輯</a>
        </div>
      </div>
    </div>
  </div>
</div>