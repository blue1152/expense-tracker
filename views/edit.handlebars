<!-- ./views/edit.handlebars -->
<h1 class="mb-1 restaurant-show-title">修改支出項目</h1>
<div class="container mb-5">
  <div class="row">
    <div class="mx-auto">
      <div class="card" style="width: 30rem">
        <div class="card-body">
          <form action="/restaurants/{{{restaurants.id}}}/edit?_method=PUT" method="POST" style="display: inline;">
            <div class="mt-3 mb-5">
              <div class="form-group">
                <label for="name">支出項目：</label>
                <input type="text" class="form-control" placeholder="name" name="name" value="{{{restaurants.name}}}">
              </div>
              <div class="form-group">
                <label for="category">分類：</label>
                <input type="text" class="form-control" placeholder="category" name="category"
                  value="{{{restaurants.category}}}">
              </div>
              <div class="form-group">
                <label for="google_map">金額：</label>
                <input type="text" class="form-control" placeholder="google_map" name="google_map"
                  value="{{{restaurants.amount}}}">
              </div>
              <button type="submit" class="btn btn-success mr-3">送出編輯內容</button>
          </form>
          <a href="/restaurants/{{{restaurants.id}}}" class="btn btn-secondary">取消編輯</a>
        </div>
      </div>
    </div>
  </div>
</div>