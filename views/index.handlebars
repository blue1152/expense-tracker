<!-- ./views/index.handlebars -->
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <table class="table table-borderless text-center">
        <tbody>
          <tr>
            <td></td>
            <td>
              <div class="dropdown">
                <button class="btn btn-info dropdown-toggle" type="button" id="category" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
                  支出分類
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="/">全部</a>
                  <a class="dropdown-item" href="/category/home"><i class="fas fa-home"></i> 家居物業</a>
                  <a class="dropdown-item" href="/category/traffic"><i class="fas fa-shuttle-van"></i> 交通出行</a>
                  <a class="dropdown-item" href="/category/relax"><i class="fas fa-grin-beam"></i> 休閒娛樂</a>
                  <a class="dropdown-item" href="/category/food"><i class="fas fa-utensils"></i> 餐飲食品</a>
                  <a class="dropdown-item" href="/category/others"><i class="fas fa-pen"></i> 其他</a>
                </div>
              </div>
            </td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td class="table-info" style="width: 30rem;">
              <span>總金額：</span>
              <h3 id="sum">
              </h3>
            </td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <table class="table table-hover text-center" style="width: 30rem;" align="center">
        <tbody>
          {{#each records}}
          <tr>
            <td id="category">{{this.category}}</td>
            <td>{{this.name}}</td>
            <td id="cost">{{this.amount}}</td>
            <td>
              <a href="/records/{{{this.id}}}/edit" class="btn btn-success btn-sm mr-2">edit</a>
              <form action="/records/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm">delete</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <table class="table table-borderless text-center">
        <tbody>
          <tr>
            <td>
              <a href="/records/new" class="btn btn-outline-info">新增支出</a>
            </td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>