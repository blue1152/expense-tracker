<!-- ./views/index.handlebars -->
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <table class="table table-borderless text-center">
        <tbody>
          <tr>
            <td>
              <div class="dropdown">
                <button class="btn btn-lg btn-info dropdown-toggle" type="button" id="category" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
                  支出分類：
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="/">家居物業</a>
                  <a class="dropdown-item" href="/">交通出行</a>
                  <a class="dropdown-item" href="/">休閒娛樂</a>
                  <a class="dropdown-item" href="/">餐飲食品</a>
                  <a class="dropdown-item" href="/">其他</a>
                </div>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <h3>總金額：</h3>
              <div class="alert alert-warning" role="alert">
                A simple warning alert—check it out!
              </div>
            </td>
          </tr>

        </tbody>
      </table>
      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th scope="col">支出項目</th>
            <th scope="col">分類</th>
            <th scope="col">金額</th>
            <th scope="col">編輯</th>
          </tr>
        </thead>
        <tbody>
          {{#each records}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.amount}}</td>
            <td>
              <a href="/records/{{{this.id}}}/edit" class="btn btn-success btn-sm mr-2">edit</a>
              <form action="/records/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm">delete</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>